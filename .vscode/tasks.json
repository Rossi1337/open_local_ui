{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run",
      "type": "shell",
      "command": "flutter run",
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "flutter test",
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Format",
      "type": "shell",
      "command": "dart format .",
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Analyze",
      "type": "shell",
      "command": "flutter analyze",
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run build runner",
      "type": "shell",
      "command": "dart pub run build_runner build",
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build app",
      "type": "shell",
      "windows": {
        "command": "powershell.exe",
        "args": ["../scripts/build_app.ps1", "-config", "${input:config}"],
      },
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build server",
      "type": "shell",
      "windows": {
        "command": "powershell.exe",
        "args": ["./scripts/build_server.ps1", "-config", "${input:config}"],
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
  ],
  "inputs": [
    {
      "id": "config",
      "type": "pickString",
      "description": "Select configuration",
      "options": [
        {
          "value": "debug",
          "label": "Debug"
        },
        {
          "value": "release",
          "label": "Release"
        }
      ]
    }
  ]
}
